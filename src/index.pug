- let pageTitle = 'Online TV'
doctype html
html(lang="en")
  head
    title= pageTitle
    style
      include styles/normalize.css
      include styles/style.css
  body
    include modules/header

    section.section-bunner
      .container
        .banner
          h1.banner__title Zack Snyder's Justice&nbsp;League
          .banner__info
            span.banner__info_year 2021
            span.banner__info_age 18+
            span.banner__info_time 4h 2min
            span.banner__info_rating 8.8
          p.banner__text Determined to ensure Superman's ultimate sacrifice was not in vain, Bruce Wayne aligns forces with Diana Prince with plans to recruit a team of metahumans to protect the world from an approaching threat of catastrophic proportions.
          .banner-control
            button.banner-control__btn.banner-control__btn_main
              a( class='banner-control__btn-link banner-control__btn-link_first' target="_blank" href='https://hd.kinopoisk.ru/film/4473a31e267ee987b5b49fc9b7b41fd4?') Watch
            button.banner-control__btn.banner-control__btn_more 
              a( class='banner-control__btn-link banner-control__btn-link_second' target="_blank" href='https://ru.wikipedia.org/wiki/%D0%9B%D0%B8%D0%B3%D0%B0_%D1%81%D0%BF%D1%80%D0%B0%D0%B2%D0%B5%D0%B4%D0%BB%D0%B8%D0%B2%D0%BE%D1%81%D1%82%D0%B8_%D0%97%D0%B0%D0%BA%D0%B0_%D0%A1%D0%BD%D0%B0%D0%B9%D0%B4%D0%B5%D1%80%D0%B0') More information

    include modules/footer